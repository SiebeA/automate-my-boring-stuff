import os
import eyed3

# Specify the directory containing the MP3 files
directory = os.getcwd()

# Iterate over the files in the directory
for filename in os.listdir(directory):
    if filename.endswith(".mp3"):
        # Open the MP3 file
        filepath = os.path.join(directory, filename)
        audio = eyed3.load(filepath)

        # Get the title from the MP3 metadata
        if audio and audio.tag and audio.tag.title:
            # Remove any illegal characters from the title
            title = audio.tag.title.replace("/", "-").replace("\\", "-")

